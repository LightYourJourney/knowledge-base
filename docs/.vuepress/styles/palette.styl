// 自定义字体
$font-en = 'JetBrains Mono' // 英文字体
$font-zh = 'LXGW WenKai Screen' // 中文字体

// 应用到全局
body
  font-family: $font-en, $font-zh

// 你可以根据需要进一步自定义其他元素的字体
h1, h2, h3, h4, h5, h6
  font-family: $font-en, $font-zh

p, li, span
  font-family: $font-en, $font-zh

// Go to top
$MQWide ?= 1440px
$MQMobile ?= 768px